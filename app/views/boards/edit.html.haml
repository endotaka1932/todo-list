.container
  %h2 Edit Boards
  = form_with(model: @board, local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field 'title', class: 'text'
      = f.label :content, 'descrioption'
    %div
      = f.text_area 'content',class: 'text'
    %div
      = f.submit 'Submit', class: 'btn-primary'